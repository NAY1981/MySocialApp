<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_posts">

    <fragment
        android:id="@+id/navigation_posts"
        android:name="com.bam.mysocialapp.ui.posts.PostsFragment"
        android:label="@string/posts"
        tools:layout="@layout/fragment_posts" />

    <fragment
        android:id="@+id/navigation_albums"
        android:name="com.bam.mysocialapp.ui.albums.AlbumsFragment"
        android:label="@string/albums"
        tools:layout="@layout/fragment_albums" />

    <fragment
        android:id="@+id/navigation_account"
        android:name="com.bam.mysocialapp.ui.acount.AccountFragment"
        android:label="@string/account"
        tools:layout="@layout/fragment_accounts" />
</navigation>